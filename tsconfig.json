{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "dist",
    "rootDir": "./src",
    "declaration": true,
    "baseUrl": ".",
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "useUnknownInCatchVariables": false,
    "allowSyntheticDefaultImports": true,

    "lib": ["ES2020", "DOM"]
  },
  "include": ["src/**/*", "types"],
  "exclude": ["node_modules", ".vscode-test"]
}
